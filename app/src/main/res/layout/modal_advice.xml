<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <ImageButton
        android:id="@+id/Button01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="14dp"
        android:textColor="@color/Blue"
        android:text="ОК"
        android:src="@drawable/ic_down_chevron_transparent"
        android:background="@color/White"
        android:layout_below="@+id/label"
        android:layout_alignRight="@+id/label"
        android:layout_alignEnd="@+id/label" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/Blue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/youtubeButton"
        android:layout_toStartOf="@+id/youtubeButton" />

    <CheckBox
        android:id="@+id/checkBoxSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Больше не отображать"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/Button01"
        android:layout_alignLeft="@+id/label"
        android:layout_alignStart="@+id/label" />

</RelativeLayout>