<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.fatburner.fatburner.Settings">

        <ImageButton
            android:id="@+id/applyBtn"
            android:src="@drawable/ic_down_chevron"
            android:onClick="buttonClicked"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/White"
            android:shadowColor="#45A9D4"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:text="Gender"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Age"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/gender"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Weight"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day start time"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training start time"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training days"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify about water"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify about food"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/switchWaterNotification"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify about sleep"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/switchFoodNotification"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="11dp" />

        <Switch
            android:id="@+id/switchSleepNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" />

        <Switch
            android:id="@+id/switchFoodNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/switchSleepNotification"
            android:layout_alignRight="@+id/switchSleepNotification"
            android:layout_alignTop="@+id/textView8" />

        <Switch
            android:id="@+id/switchWaterNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/switchFoodNotification"
            android:layout_alignRight="@+id/switchFoodNotification"
            android:layout_alignTop="@+id/textView7" />

        <TextView
            android:id="@+id/dayStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/weight"
            android:layout_alignStart="@+id/weight"
            android:layout_alignRight="@+id/weight"
            android:layout_alignEnd="@+id/weight" />

        <TextView
            android:id="@+id/trainingStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:ems="10"
            android:inputType="none"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/dayStart"
            android:layout_alignStart="@+id/dayStart"
            android:layout_alignRight="@+id/dayStart"
            android:layout_alignEnd="@+id/dayStart" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:ems="10"
            android:digits="0123456789."
            android:maxLength="4"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:inputType="numberDecimal"

            android:layout_alignRight="@+id/age"
            android:layout_alignEnd="@+id/age" />

        <TextView
            android:id="@+id/age"
            android:digits="0123456789"
            android:maxLength="2"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_above="@+id/textView3"
            android:textAlignment="textEnd"
            android:layout_alignRight="@+id/phase"
             />

        <Switch
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="18sp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/trainingDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:ems="10"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:layout_alignRight="@+id/trainingStart"
            android:layout_alignEnd="@+id/trainingStart" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="14dp"
            android:text="Phase"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="15dp"
            android:text="Diet Type"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/phase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/switchWaterNotification"
            android:layout_alignRight="@+id/switchWaterNotification"
            android:layout_alignTop="@+id/textView16"
            android:layout_toRightOf="@+id/applyBtn"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/diet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/switchWaterNotification"
            android:layout_alignRight="@+id/switchWaterNotification"
            android:layout_alignTop="@+id/textView17"
            android:textSize="18sp"
            android:text="Белковая" />


</RelativeLayout>
