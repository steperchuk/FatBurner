<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:background="@color/White">

    <ImageButton android:id="@+id/youtubeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:background="@color/White"
        android:src="@drawable/ic_youtube"
        android:layout_alignTop="@+id/exercise_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_below="@+id/youtubeButton"
        android:layout_height="200px"
        android:layout_above="@+id/Button01"
        android:layout_alignLeft="@+id/exercise_label"
        android:layout_alignStart="@+id/exercise_label"
        android:layout_alignRight="@+id/youtubeButton"
        android:layout_alignEnd="@+id/youtubeButton">

        <TextView android:text="@+id/info"
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

    </ScrollView>

    <Button
        android:id="@+id/Button01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="14dp"
        android:textColor="@color/Blue"
        android:text="ОК"
        android:background="@color/White"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/exercise_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14dp"
        android:textColor="@color/Blue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/youtubeButton"
        android:layout_toStartOf="@+id/youtubeButton" />

</RelativeLayout>